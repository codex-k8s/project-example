# ======================
# PROJECT LAYOUT
# ======================
# Projects (space separated). Up to 4.
PROJECTS="project1 project2"
AI_DEV_SLOTS="10"

# ======================
# K3S NETWORKING
# ======================
POD_SUPER_CIDR="10.64.0.0/10"
SERVICE_CIDR="10.43.0.0/16"
PLATFORM_POOL_CIDR="10.120.0.0/16"

# ======================
# VERSIONS
# ======================
CALICO_VERSION="v3.31.3"
CERT_MANAGER_VERSION="v1.19.2"
METALLB_VERSION="v0.15.3"
LONGHORN_VERSION="v1.10.2"
VELERO_VERSION="v1.17.2"
VELERO_AWS_PLUGIN_IMAGE="velero/velero-plugin-for-aws:v1.13.2"

# ======================
# METALLB L2
# ======================
# Enable MetalLB only if you have extra IPs in the same L2 subnet.
ENABLE_METALLB="false"
# L2 address ranges (space separated), for example:
# METALLB_L2_ADDRESSES="192.168.10.240-192.168.10.250 192.168.10.251-192.168.10.254"
METALLB_L2_ADDRESSES=""

# ======================
# REGISTRY PER NAMESPACE
# ======================
REGISTRY_PORT="5000"
REGISTRY_PVC_SIZE="10Gi"
REGISTRY_STORAGECLASS="longhorn-registry"

# ======================
# LONGHORN S3 BACKUPS
# ======================
LH_S3_BUCKET=""
LH_S3_REGION="us-east-1"
LH_S3_PREFIX="longhorn"
LH_S3_ENDPOINT="https://s3.YOUR-PROVIDER.TLD"
LH_S3_VIRTUAL_HOSTED_STYLE="false"
LH_S3_ACCESS_KEY=""
LH_S3_SECRET_KEY=""

# ======================
# VELERO (k8s objects) S3
# ======================
VELERO_BUCKET=""
VELERO_PREFIX="velero"
VELERO_REGION="us-east-1"
VELERO_S3_URL="https://s3.YOUR-PROVIDER.TLD"
VELERO_S3_FORCE_PATH_STYLE="true"
VELERO_ACCESS_KEY=""
VELERO_SECRET_KEY=""

# ======================
# BACKUP METHOD A (StorageClass recurringJobSelector)
# ======================
# Default StorageClass: prod|staging|dev
DEFAULT_SC="staging"

# Single-node Longhorn usually uses 1 replica
LONGHORN_REPLICAS="1"

# ======================
# HOST FIREWALL
# ======================
ENABLE_HOST_FIREWALL="true"
EXT_IF=""                 # empty => autodetect
SSH_ALLOW_CIDR="0.0.0.0/0"
HTTP_ALLOW_CIDR="0.0.0.0/0"
HTTPS_ALLOW_CIDR="0.0.0.0/0"
